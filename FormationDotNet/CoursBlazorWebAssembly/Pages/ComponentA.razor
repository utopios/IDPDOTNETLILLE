@page "/componentA"
@{
    string newName = "new Name";
}
<h3>ComponentA @Name</h3>

<a @onclick="() => ChangeName(newName)">Click</a>
@code {
    public string Name { get; set; }
    public ComponentA()
    {
        Name = "Ihab";
    }

    public void ChangeName(string name)
    {
        Name = name;
    }
}
