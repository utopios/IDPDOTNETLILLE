<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductNavigation.Pages.ProductPage" Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand">
            <Label Text="{Binding Title}" HorizontalTextAlignment="Start"></Label>
            <Label Text="{Binding Price}" HorizontalTextAlignment="End"></Label>
            <Label Text="{Binding Description}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>