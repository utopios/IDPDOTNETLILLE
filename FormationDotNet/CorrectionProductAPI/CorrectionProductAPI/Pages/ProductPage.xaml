<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CorrectionProductAPI.Pages.ProductPage" Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand">
            <Label Text="{Binding Title}" HorizontalTextAlignment="Start"></Label>
            <Label Text="{Binding Price}" HorizontalTextAlignment="End"></Label>
            <Label Text="{Binding Stock}"></Label>
            <Button Text="Edit" x:Name="EditButton" Clicked="EditButton_Clicked"></Button>
            <Button Text="Delete" x:Name="DeleteButton" Clicked="DeleteButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>