<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoursXamarinForms.Pages.ListViewPage">
    <NavigationPage.TitleView >
        <StackLayout>
            <Button Text="Home" Clicked="Button_Clicked_1"></Button>
        </StackLayout>
    </NavigationPage.TitleView>
    <StackLayout>
        
        <ListView x:Name="demoListView">
            <ListView.Header>
                <StackLayout>
                    <Entry x:Name="demoEntry" />
                    <Button Text="Valider" Clicked="Button_Clicked"></Button>
                </StackLayout>   
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!--<TextCell Text="{Binding Name}"></TextCell>-->
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Name}"></Label>
                            <Label Text="{Binding Age}"></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>