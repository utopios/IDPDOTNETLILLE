<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoursXamarinForms.Pages.ListViewPage">
    <StackLayout>
        <ListView x:Name="demoListView">
            <ListView.Header>
                <StackLayout>
                    <Entry x:Name="demoEntry" />
                    <Button Text="Valider" Clicked="Button_Clicked"></Button>
                </StackLayout>   
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>